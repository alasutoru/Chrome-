{
  "manifest_version": 3,
  "name": "書籤管理器",
  "version": "1.0",
  "description": "一個簡單的書籤管理器擴充元件",
  "permissions": [ 
    "bookmarks", 
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
  ,
    "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-manager": {
      "suggested_key": "Ctrl+Shift+B",
      "description": "打開書籤管理頁面"
    }
  }
}
